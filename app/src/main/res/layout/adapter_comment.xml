<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="10dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sociorich.app.app_utils.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/user_img"
                android:src="@drawable/profile_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:id="@+id/user_txt"
                android:layout_toLeftOf="@+id/date_txt"
                android:layout_toRightOf="@+id/user_img"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_txt"
                android:layout_alignParentRight="true"
                android:text="13/7/2019"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content here"
                android:id="@+id/comment_txt"
                android:layout_below="@+id/user_txt"
                android:layout_toRightOf="@+id/user_img"
                android:layout_marginLeft="5dp"/>

            <ImageView
                android:id="@+id/menu_img"
                android:layout_width="30dp"
                android:layout_height="20dp"
                card_view:srcCompat="@drawable/hori_dots"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/date_txt"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>